/* ==== Kalahari “static-preview” theme tokens (light & dark) ==== */
:root{
  --bg:#f2e8d5;             /* light khaki */
  --text:#1f2937;
  --muted:#6b7280;
  --border:#e5e7eb;
  --accent:#047857;         /* emerald */
  --accent-2:#10b981;       /* light emerald */
  --card:#ffffff;
}
.dark{
  --bg:#052e2b;
  --text:#f8fafc;
  --muted:#cbd5e1;
  --border:#0e4a45;
  --accent:#34d399;
  --accent-2:#86efac;
  --card:#083b37;
}

/* Base canvas derived from vars */
body { background: var(--bg); color: var(--text); }

/* Utility shims to match the static file */
.muted { color: var(--muted); }
.k-container { max-width: 1100px; margin: 0 auto; padding: 0 20px; }
.k-section { padding: 56px 0; }

/* Glassy surface / cards / chips / buttons */
.k-card { background: var(--card); border: 1px solid var(--border); border-radius: 20px; box-shadow: 0 1px 0 rgba(0,0,0,.03); }
.k-chip { padding: .25rem .6rem; border-radius: 999px; border: 1px solid var(--border); font-size: .8rem; display:inline-block; }

.k-btn { display:inline-flex; align-items:center; gap:.5rem; padding:.6rem 1rem; border-radius:16px; border:1px solid var(--accent); background:var(--accent); color:#fff; font-weight:600; }
.k-btn-ghost { background:transparent; color:var(--text); border-color:var(--border); }

.k-hero-img { aspect-ratio: 16/9; border:1px dashed var(--border); border-radius:18px; display:grid; place-items:center; color:var(--muted); }

/* Sticky header backdrop */
.k-header { backdrop-filter:saturate(140%) blur(6px); position:sticky; top:0; border-bottom:1px solid var(--border); background: color-mix(in oklab, var(--bg) 85%, transparent); }

/* Simple grid helpers (responsive matches the static) */
.k-grid { display:grid; gap:24px; }
.k-grid-2 { grid-template-columns: 1fr 1fr; }
.k-grid-3 { grid-template-columns: repeat(3,1fr); }
.k-grid-4 { grid-template-columns: repeat(4,1fr); }
@media (max-width: 900px){
  .k-grid-4{ grid-template-columns: repeat(2,1fr); }
  .k-grid-3{ grid-template-columns: repeat(2,1fr); }
  .k-grid-2{ grid-template-columns: 1fr; }
}

/* Map block placeholder */
.k-map { height:360px; border-radius:22px; border:1px solid var(--border); background:linear-gradient(135deg,#e8fff3,#f3fff8); }

/* Hero type scale like the static */
.k-h1 { font-size: clamp(32px, 4vw, 46px); line-height: 1.1; margin: 0; }

/* Toggle pill look */
.k-toggle { cursor: pointer; display:inline-flex; align-items:center; gap:.55rem; padding:.6rem 1rem; border-radius:999px; border:1px solid #065f46; background:#065f46; color:#fff; font-weight:700; box-shadow:0 2px 0 rgba(0,0,0,.05); transition:transform .04s ease, box-shadow .2s ease, background .2s ease; }
