/* === Kalahari typography micro-kit ===
   Improves readability without changing your visual layout
   ------------------------------------------------------- */
.k-readable { 
  letter-spacing: 0.004em;   /* subtle kerning */
  word-spacing: 0.02em;      /* space between words */
  line-height: 1.55;         /* comfy paragraphs */
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  font-feature-settings: "kern","liga","calt";
}

.k-readable-tight {
  letter-spacing: 0.006em;   /* headings need a hair more tracking */
  word-spacing: 0.02em;
  line-height: 1.15;         /* crisp but not cramped */
  text-wrap: balance;        /* modern multi-line balance */
}

.k-balance { text-wrap: balance; }             /* balance any heading */
.k-measure { max-width: 68ch; }                /* ideal reading width */
.k-measure-sm { max-width: 58ch; }             /* for intros and straplines */

.k-emphasis { color: var(--text); font-weight: 600; }
.k-muted { color: var(--muted); }

.k-text-elevate { 
  /* lift text slightly off variable backgrounds */
  text-shadow: 0 1px 0 rgba(255,255,255,0.35), 0 8px 24px rgba(0,0,0,0.12);
}
.dark .k-text-elevate {
  text-shadow: 0 1px 0 rgba(0,0,0,0.55), 0 10px 36px rgba(0,0,0,0.32);
}

/* nicer lists & spacing rhythm inside prose blocks */
.k-prose p { margin: 0 0 0.6em 0; }
.k-prose ul, .k-prose ol { margin: 0.6em 0 0 0; padding-left: 1.1em; }
.k-prose li { margin: 0.25em 0; }

/* Inputs: match text rhythm */
.k-input, .k-select { 
  padding: .6rem .8rem; border-radius: 12px; 
  border: 1px solid var(--border); background: transparent; 
  color: var(--text); letter-spacing: 0.004em; word-spacing: 0.02em;
}

/* Links in body copy stand out a touch */
.k-link { text-decoration: underline; text-underline-offset: 3px; }

/* === Dark-mode POP upgrades === */
.dark {
  /* Slightly brighter text & cards, clearer borders */
  --text: #f9fafb;            /* a touch brighter */
  --muted: #d1d5db;           /* bump contrast a notch */
  --card: #0b4a45;            /* a hair lighter than before */
  --border: #11665f;          /* brighter border for definition */
}

/* Lift headings & important text off background */
.k-text-elevate {
  text-shadow: 0 1px 0 rgba(255,255,255,.35), 0 10px 34px rgba(0,0,0,.14);
}
.dark .k-text-elevate {
  text-shadow: 0 1px 0 rgba(0,0,0,.6), 0 14px 44px rgba(0,0,0,.45);
}

/* Card glass tweak for dark mode */
.k-card {
  background: var(--card);
  border: 1px solid var(--border);
  box-shadow: 0 1px 0 rgba(0,0,0,.03);
}

/* Even spacing for the top navigation (matches the static preview) */
.k-navlinks { display:flex; align-items:center; gap:22px; flex-wrap:nowrap; }
@media (max-width: 900px){ .k-navlinks { gap:14px; flex-wrap:wrap; } }

/* === Text POP + Rhythm (global) ===
   Makes all copy lift off the background, esp. in dark mode, without changing your layout.
   Mirrors the static preview’s contrast + clarity.  :contentReference[oaicite:0]{index=0} */
:root{
  --link-underline: color-mix(in oklab, var(--accent) 70%, var(--text) 30%);
}
::selection{ background: color-mix(in oklab, var(--accent) 22%, transparent); }

/* Headings — subtle lift; dark mode stronger */
h1,h2,h3,.k-heading-pop{
  text-shadow: 0 1px 0 rgba(255,255,255,.35), 0 10px 34px rgba(0,0,0,.14);
  letter-spacing: .006em;
}
.dark h1,.dark h2,.dark h3,.dark .k-heading-pop{
  text-shadow: 0 1px 0 rgba(0,0,0,.60), 0 14px 44px rgba(0,0,0,.45);
}

/* Body copy — micro tracking/word spacing + slight lift for readability */
main, .k-readable-global{
  letter-spacing: .004em;
  word-spacing: .02em;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
.k-copy-pop{
  text-shadow: 0 1px 0 rgba(255,255,255,.28), 0 6px 20px rgba(0,0,0,.10);
}
.dark .k-copy-pop{
  text-shadow: 0 1px 0 rgba(0,0,0,.55), 0 10px 36px rgba(0,0,0,.32);
}

/* Links — clearer underline + slight lift on hover */
a:not(.k-btn):not(.k-chip){
  text-decoration: underline;
  text-decoration-color: var(--link-underline);
  text-underline-offset: 3px;
  text-decoration-thickness: .075em;
}
a:not(.k-btn):not(.k-chip):hover{ text-shadow: 0 6px 18px rgba(0,0,0,.10); }

/* Cards & borders in dark for definition */
.dark .k-card{
  border-color: var(--border);
  box-shadow: 0 1px 0 rgba(0,0,0,.10);
}

/* Inter-component rhythm — slightly tighter than before */
.k-section{ padding: 64px 0; }             /* was 80–96px */
.k-grid{ gap: 24px; }                       /* was 28–32px */
.k-card.p-lg{ padding: 22px; }              /* subtle tighten */
.k-card.p-md{ padding: 16px; }
.k-card.p-sm{ padding: 12px; }

