  padding:.58rem .8rem; border-radius:12px; border:1px solid var(--border);
  background:transparent; color:var(--text);
  letter-spacing:.004em; word-spacing:.02em;
}

/* === Brand & header polish === */
.k-header { backdrop-filter:saturate(140%) blur(6px); position:sticky; top:0; border-bottom:1px solid var(--border);
  background: color-mix(in oklab, var(--bg) 82%, transparent);
}
.k-header::after { content:""; position:absolute; inset:0; pointer-events:none;
  background: linear-gradient(180deg, rgba(0,0,0,.06), transparent 70%);
}
.k-navlinks { display:flex; align-items:center; gap:22px; flex-wrap:nowrap; }

/* Brand look: white, safari vibe (Fraunces), lifted */
.k-brand { color:#fff; letter-spacing:.045em; text-transform:uppercase; font-weight:800; line-height:1;
  text-shadow: 0 1px 0 rgba(0,0,0,.45), 0 16px 36px rgba(0,0,0,.38);
}

/* Header links are always white (unified), never purple/blue */
.k-header a { color: #fff !important; text-decoration: none; }

/* === Unified link colors (body) === */
a:not(.k-btn):not(.k-chip) {
  color: var(--accent);                   /* light mode default: deep green */
  text-decoration: underline;
  text-underline-offset: 3px;
  text-decoration-thickness: .075em;
  transition: color .2s ease, text-shadow .2s ease;
}
/* visited: keep readable in light mode (white) */
a:not(.k-btn):not(.k-chip):visited { color: #fff; }
/* dark mode: links are light green; visited stays light green */
.dark a:not(.k-btn):not(.k-chip),
.dark a:not(.k-btn):not(.k-chip):visited { color: var(--accent-2); }
a:not(.k-btn):not(.k-chip):hover, a:not(.k-btn):not(.k-chip):focus { text-shadow: 0 6px 18px rgba(0,0,0,.12); }

