/* ===== Global polish ===== */
:root{
  --bg:#f6f4ef;
  --text:#0f172a;
  --muted:#5b6475;
  --accent:#2563eb;
  --accent-2:#16a34a;
  --card:#ffffff;
  --border:#e5e7eb;
}
.dark:root{
  --bg:#0b1020;
  --text:#f5f7fa;
  --muted:#9aa3b2;
  --accent:#60a5fa;
  --accent-2:#34d399;
  --card:#0f172a;
  --border:#233047;
}
html, body { background: var(--bg); color: var(--text); }
* { font-feature-settings: "ss01" on, "liga" on; }
.container { @apply mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl; }
.section { @apply py-10 sm:py-14; }
/* Headings that pop in both themes */
h1.brand { @apply text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight leading-tight; text-wrap: balance; filter: drop-shadow(0 1px 0 rgba(0,0,0,.15)); }
.dark h1.brand { filter: drop-shadow(0 2px 0 rgba(255,255,255,.08)); }
.lead { @apply text-base sm:text-lg text-[color:var(--muted)]; }
.card { @apply rounded-2xl border bg-[color:var(--card)] border-[color:var(--border)] shadow-sm; }
a { color: var(--accent); } a:hover{ text-decoration: underline; }
.prose-list { @apply space-y-2; }
